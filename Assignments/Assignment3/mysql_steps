------------------------------------------TABLE 1------------------------------------------------
CREATE TABLE customers (
id INT(11) NOT NULL AUTO_INCREMENT PRIMARY KEY,
name VARCHAR(30),
password VARCHAR(15),
mobile VARCHAR(15),
address VARCHAR(60),
email VARCHAR(40) );


mysql> CREATE TABLE customers (
    -> id INT(11) NOT NULL AUTO_INCREMENT PRIMARY KEY,
    -> name VARCHAR(30),
    -> password VARCHAR(15),
    -> mobile VARCHAR(15),
    -> address VARCHAR(60),
    -> email VARCHAR(40) );
Query OK, 0 rows affected, 1 warning (0.59 sec)

mysql> select * from customers;
Empty set (0.00 sec)

mysql> desc customers;
