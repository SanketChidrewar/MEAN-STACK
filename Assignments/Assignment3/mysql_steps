------------------------------------------TABLE 2------------------------------------------------

CREATE TABLE pizza_items (
id INT(11) NOT NULL AUTO_INCREMENT PRIMARY KEY,
name VARCHAR(40),
type VARCHAR(20),
category VARCHAR(30),
description VARCHAR(120) );


mysql> CREATE TABLE pizza_items (
    -> id INT(11) NOT NULL AUTO_INCREMENT PRIMARY KEY,
    -> name VARCHAR(40),
    -> type VARCHAR(20),
    -> category VARCHAR(30),
    -> description VARCHAR(120) );
Query OK, 0 rows affected, 1 warning (1.11 sec)

